@model IEnumerable<VehicleMVC.MakerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MakerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakerDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakersModels)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MakerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakerDescription)
        </td>

        @foreach (var modelsInMaker in item.MakersModels) {
        <tr>
            @Html.DisplayFor(modelItem => modelsInMaker)
        </tr>
        }

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MakeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MakeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MakeID })
        </td>
    </tr>
}

</table>
